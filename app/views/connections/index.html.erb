<h1>Listing connections</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Port</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @connections.each do |connection| %>
  <tr>
    <td><%= connection.name %></td>
    <td><%= connection.url %></td>
    <td><%= connection.port %></td>
    <td><%= link_to 'Show', connection %></td>
    <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
    <td><%= link_to 'Destroy', connection, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Connection', new_connection_path %>
<script type='text/javascript'>
$(function(){
  window.router = new MongoProcessing.Routers.ConnectionsRouter({connections:  <%= @connections.to_json.html_safe %> });
  Backbone.history.start();
});
</script>